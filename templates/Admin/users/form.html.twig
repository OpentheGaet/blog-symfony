{% extends 'Admin/base.html.twig' %}

{% block title %} Users form{% endblock %}

{% block body %}

<section class="container" id="section-home">
    <div class="col-md-9 card" style="min-height:25em; color: white; padding: 2em;">
        {{ form_start(form) }}
            {{ form_row(form.firstName, {'disabled' : 'true'}) }}
            {{ form_row(form.name, {'disabled' : 'true'}) }}
            {{ form_row(form.address, {'disabled' : 'true'}) }}
            {{ form_row(form.number, {'disabled' : 'true'}) }}
            {{ form_row(form.postalCode, {'disabled' : 'true'}) }}
            {{ form_row(form.city, {'disabled' : 'true'}) }}
            {{ form_row(form.email, {'disabled' : 'true'}) }}
        {{ form_end(form) }}    
    </div>
</section>    

{% endblock %}