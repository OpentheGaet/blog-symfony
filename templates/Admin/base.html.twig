<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('Admin/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('Admin/css/admin.css') }}">
    {% endblock %}
</head>

<body>

{% block header %}
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a href="{{ path('ad_home') }}">Admin</a>
        <button class="btn btn-light" id="menu-hide">Toggle Menu</button>
        <button class="btn btn-light" id="menu-show" style="display:none">Toggle Menu</button>
        <a href="{{ path('ad_logout') }}" class="logout">Exit</a>
    </nav>
</header>
{% endblock %}

{% block sidebar %}
<div class="d-flex" id="wrapper">
    <div class="bg-dark border-right" id="sidebar-wrapper">
        <div class="list-group list-group-flush">
            <a href="{{ path('ad_home') }}" class="list-group-item list-group-item-action bg-dark">Home</a>
            <a href="{{ path('ad_styles') }}" class="list-group-item list-group-item-action bg-dark">Type</a>
            <a href="{{ path('ad_artists') }}" class="list-group-item list-group-item-action bg-dark">Artists</a>
            <a href="{{ path('ad_albums') }}" class="list-group-item list-group-item-action bg-dark">Albums</a>
            <a href="{{ path('ad_comments') }}" class="list-group-item list-group-item-action bg-dark">Comments</a>
            <a href="{{ path('users') }}" class="list-group-item list-group-item-action bg-dark">Users</a>
            <a href="{{ path('ad_users') }}" class="list-group-item list-group-item-action bg-dark">Admin users</a>
        </div>
    </div>
</div>
{% endblock %}

<main>
{% block body %}
{% endblock %}
</main>

{% block javascripts %}
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="{{ asset("Admin/js/jquery.min.js") }}"></script>
<script src="{{ asset("Admin/js/bootstrap.min.js") }}"></script>
<script src="{{ asset("Admin/js/admin.js") }}"></script>
{% endblock %}

{% block footer %}
{% endblock %}
</body>

</html>