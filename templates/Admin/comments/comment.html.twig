{% extends 'Admin/base.html.twig' %}

{% block title %} Albums form{% endblock %}

{% block body %}

<section class="show-comment">
    <div class="container">
        <div class="col-md-9 card" style="min-height:25em; color: white; padding: 2em;">
            <p class="text-primary">commment posted by {{comment.user.firstname}} {{comment.user.name}} at the date of
                : {{comment.date|date("Y-m-d")}} {{comment.date|date('H:i:s')}} </p>
            <p class="text-dark">About the album : {{ comment.album.name }}</p>
            <textarea name="comment" id="comment" class="form-control" readonly="true">{{ comment.content }}</textarea>
        </div>
    </div>
</section>

{% endblock %}