{% extends 'Admin/base.html.twig' %}

{% block title %} Users update{% endblock %}

{% block body %}

<section class="container" id="section-home">
    <div class="col-md-9 card" style="min-height:25em; color: white; padding: 2em;">
        {{ form_start(form) }}
            {{ form_row(form.firstName) }}
            {{ form_row(form.name) }}
            {{ form_row(form.address) }}
            {{ form_row(form.number) }}
            {{ form_row(form.postalCode) }}
            {{ form_row(form.city) }}
            {{ form_row(form.email) }}
            <button type="submit" class="btn btn-success">Register</button>
            <a href="{{ path('ad_users_pass', { id : idUser }) }}" role="button" class="btn btn-success">Change password</a>
        {{ form_end(form) }}    
    </div>
</section>    

{% endblock %}